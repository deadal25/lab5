<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E1E0E0"
    tools:context=".SejarahActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:padding="20dp"
        android:background="#D60303">

        <TextView
            android:id="@+id/text_sejarah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sejarah"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#E1E0E0"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold"
                android:text="Latar Belakang" />

            <TextView
                android:id="@+id/latarbelakang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="@string/latarbelakang" />

            <TextView
                android:id="@+id/pencapaian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold"
                tools:text="@string/pencapaian" />

            <TextView
                android:id="@+id/isiPencapaian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="@string/isiPencapaian" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>